<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:fts), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
          <% if user_signed_in? && current_user.admin? %>
            <li><%= link_to t(:categories), admin_categories_path %></li>
            <li><%= link_to t(:questions), admin_questions_path %></li>
            <li><%= link_to t(:users), admin_users_path %></li>         
          <% end %>            
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:edit_link), edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(:logout), logout_path %>
                </li>
              </ul>
            </li>
        <% else %>
          <li><%= link_to t(:login), login_path %></li>
        <% end %>   
      </ul>
    </nav>
  </div>
</header>
